{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "files": [
    "src/GraphQLApi.ts",
    "src/GraphQLModule.ts",
    "src/GraphQLResolver.ts",
    "src/index.ts"
  ]
}
